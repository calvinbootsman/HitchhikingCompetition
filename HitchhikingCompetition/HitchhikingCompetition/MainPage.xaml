<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HitchhikingCompetition"
             x:Class="HitchhikingCompetition.MainPage"
             Title="Hitchhiking app">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15">
            <Label Text="Enter your Code:" />
            <Entry x:Name="LoginUsername" Text="" />
            <Entry x:Name="LoginPassword" IsPassword="True" Text="" />
            <Button x:Name="LoginBtn" Text="Login" Clicked="LoginClicked" />
            <Label x:Name="WrongCode" Text="" TextColor="IndianRed"/>
            <ActivityIndicator x:Name="ActivityRunner" Color="Blue" IsRunning="False"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>